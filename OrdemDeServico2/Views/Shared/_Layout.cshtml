<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>


    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-action="Index" asp-controller="Produto">Produtos</a>
    
        <a class="navbar-brand" asp-action="Index" asp-controller="Estoque">Estoque</a>
    </nav>

    @* Conteudo *@
    <div class="m-5">
        @RenderBody()
    </div>

    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy;@DateTime.Now.Year - Desenvolvido por Jean Ribeiro.
        </p>

    </footer>
</body>
</html>
