@inject Microsoft.AspNetCore.Identity.SignInManager<UsuarioLogado> SignManager
@inject Microsoft.AspNetCore.Identity.UserManager<UsuarioLogado> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>


    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-action="Index" asp-controller="Produto">Produtos</a>
        <a class="navbar-brand" asp-action="Index" asp-controller="Estoque">Estoques</a>
        <a class="navbar-brand" asp-action="Index" asp-controller="Pessoas">Usuarios</a>
        <ul class="navbar-nav ml-auto">
            @if (SignManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="Logout" asp-controller="Pessoas">
                        <h5>Olá @UserManager.GetUserName(User) - Logout</h5>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-action="Login" asp-controller="Pessoas">
                        <h5>Logout</h5>
                    </a>
                </li>
            }
        </ul>
    </nav>
    

    @* Conteudo *@
    <div class="m-5">
        @RenderBody()
    </div>

    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy;@DateTime.Now.Year - Desenvolvido por Jean Ribeiro.
        </p>

    </footer>
</body>
</html>
