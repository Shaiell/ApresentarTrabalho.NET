@model Domain.OrdemDeServico

@{
    Layout = "~/Views/Shared/Layout1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Cadastrar ordem de servico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div id="Processador" class="form-group">
                <label>Processador:</label>
                <select asp-items="@ViewBag.Processador" class="form-control" name="drpProcessador">
                    <option> --Selecione--</option>
                </select>
                <span asp-validation-for="Processador" class="text-danger"></span>
            </div>
            <div id="PlacaMae" class="form-group">
                <label>PlacaMae:</label>
                <select asp-items="@ViewBag.PlacaMae" class="form-control" name="drpPlacaMae">
                    <option> --Selecione--</option>
                </select>
                <span asp-validation-for="PlacaMae" class="text-danger"></span>
            </div>
            <div id="Memoria" class="form-group">
                <label>Memoria:</label>
                <select asp-items="@ViewBag.Memoria" class="form-control" name="drpMemoria">
                    <option> --Selecione--</option>
                </select>
                <span asp-validation-for="Memoria" class="text-danger"></span>
            </div>
            <div id="PlacaVideo" class="form-group">
                <label>PlacaVideo:</label>
                <select asp-items="@ViewBag.PlacaVideo" class="form-control" name="drpPlacaVideo">
                    <option> --Selecione--</option>
                </select>
                <span asp-validation-for="PlacaVideo" class="text-danger"></span>
            </div>
            <div id="Hd" class="form-group">
                <label>Hd:</label>
                <select asp-items="@ViewBag.Hd" class="form-control" name="drpHd">
                    <option> --Selecione--</option>
                </select>
                <span asp-validation-for="Hd" class="text-danger"></span>
            </div>
            <div id="Ssd" class="form-group">
                <label>Ssd:</label>
                <select asp-items="@ViewBag.Ssd" class="form-control" name="drSsd">
                    <option> --Selecione--</option>
                </select>
                <span asp-validation-for="Ssd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InicioProducao" class="control-label"></label>
                <input asp-for="InicioProducao" class="form-control" />
                <span asp-validation-for="InicioProducao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TerminoProducao" class="control-label"></label>
                <input asp-for="TerminoProducao" class="form-control" />
                <span asp-validation-for="TerminoProducao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Voltar Para Lista</a>
</div>

</body>
</html>
